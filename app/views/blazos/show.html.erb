<%= render @blazo %>
<% if @liked%>
<%= link_to "Dislike", blazo_like_path(@blazo), method: :post %>
<% else %>
<%= link_to "Like", blazo_like_path(@blazo), method: :post %>
<% end %>
<p>
  <strong>Content:</strong>
  <%= @blazo.content %>
</p>


<div>
  <% if current_user.id == @blazo.user_id%>
  <%= link_to "Edit this blazo", edit_blazo_path(@blazo) %>
  <%= button_to "Destroy this blazo", @blazo, method: :delete %> 
  <% end %>
</div>
